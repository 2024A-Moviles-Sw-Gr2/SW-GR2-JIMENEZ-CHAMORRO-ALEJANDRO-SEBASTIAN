<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_datos_laptop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatosLaptop">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATOS LAPTOP"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />

    <EditText
        android:id="@+id/inpt_modelo_laptop"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:hint="Ingrese el modelo de la laptop"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inpt_id_fabrica"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="316dp"
        android:ems="10"
        android:hint="Ingrese el ID de la fabrica de la laptop"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inpt_precio_laptop"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/inpt_precio_laptop"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Ingrese el precio de la laptop"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inpt_anio_laptop" />

    <EditText
        android:id="@+id/inpt_anio_laptop"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Ingrese el aÃ±o de la laptop"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inpt_modelo_laptop" />

    <Button
        android:id="@+id/btn_datos_laptop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.645" />
</androidx.constraintlayout.widget.ConstraintLayout>